{
  "private": true,
  "name": "@dailei/personal-website",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "yarn workspaces run format",
    "eslint": "yarn workspaces run eslint",
    "stylelint": "yarn workspace @dailei/client stylelint",
    "clean": "yarn workspaces run clean",
    "build:static": "yarn workspace @dailei/static-server build",
    "build:api": "yarn workspace @dailei/api-server build",
    "build:gateway": "yarn workspace @dailei/gateway build",
    "build:client": "yarn workspace @dailei/client build",
    "build": "yarn build:static & yarn build:api & yarn build:gateway & yarn build:client",
    "start:static": "yarn workspace @dailei/static-server start",
    "start:api": "yarn workspace @dailei/api-server start",
    "start:gateway": "yarn workspace @dailei/gateway start",
    "start": "yarn start:static & yarn start:api & yarn start:gateway",
    "clean:dist":"rimraf dist/ && mkdirp dist/",
    "packer": "node --experimental-specifier-resolution=node build/packer.js"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@iarna/toml": "^2.2.5",
    "loglevel": "^1.7.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-replace": "^3.0.0",
    "babel-plugin-transform-import-meta": "^2.1.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "mkdirp": "^1.0.4",
    "pkg": "^5.3.2",
    "pkg-fetch": "^3.2.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-import-css": "^3.0.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-string": "^3.0.0",
    "shelljs": "^0.8.4",
    "stylelint": "13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^21.0.0",
    "web-resource-inliner": "^5.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "embeddedLanguageFormatting": "off"
  }
}
