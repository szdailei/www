{
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module",
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es2021": true,
    "browser": true,
    "node": true,
    "serviceworker": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "17.0"
    }
  },
  "extends": ["airbnb", "plugin:react-hooks/recommended", "prettier"],
  "rules": {
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off"
  }
}
